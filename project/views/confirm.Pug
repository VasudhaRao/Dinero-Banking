head
  title PASSCODE CHECK
  link(rel='stylesheet' type='text/css' href='style.css')
  style.
    body {
    margin: 0;
    padding: 0;
    background: url(https://ak3.picdn.net/shutterstock/videos/12549413/thumb/8.jpg);
    background-size: cover;
    background-position: center;
    font-family: sans-serif;
    }
    .registerbox {
    width: 625px;
    height: 320px;
    background: #fff;
    color: #000;
    top: 50%;
    left: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    padding: 70px 70px;
    }
    h1 {
    margin: 0;
    padding: 0 0 20px;
    text-align: center;
    font-size: 22px;
    }
    .registerbox p {
    margin: 0;
    padding: 0;
    font-weight: bold;
    }
    .registerbox input {
    width: 100%;
    margin-bottom: 25px;
    color: #000;
    }
    .registerbox input[type="text"],
    input[type="password"] {
    border: none;
    border-bottom: 1px solid #fff;
    background: transparent;
    outline: none;
    height: 50px;
    }
    .registerbox input[type="submit"] {
    border: none;
    outline: none;
    height: 40px;
    background: #fff;
    font-size: 18px;
    border-radius: 20px;
    }
    .registerbox input[type="submit"]:hover {
    cursor: pointer;
    background: #000;
    color: #fff;
    }
.registerbox
  h1  Please enter the passcode sent to your MAIL
  br
  form(action='finalregister' method='POST')
    p Password :
    br
    input#psw(type='password' name='psw' placeholder='password' required='')
    br
    input(type='submit' name='submit' value='Submit')
