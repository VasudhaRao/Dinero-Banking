head
  title Registration
  link(rel='stylesheet' type='text/css' href='style.css')
  style.
    body{
    margin: 0;
    padding: 0;
    background: url(https://billflinnagency.com/wp-content/uploads/2018/01/Header-Man-with-Laptop.jpg);
    background-size: cover;
    background-position: center;
    font-family: sans-serif;
    }
    .registerbox{
    width: 400px;
    height:420px;
    background: #fff;
    color: #000;
    top: 50%;
    left: 50%;
    position: absolute;
    transform: translate(-50%,-50%);
    box-sizing: border-box;
    padding: 70px 70px;
    }
    h1{
    margin: 0;
    padding: 0 0 20px;
    text-align: center;
    font-size: 22px;
    }
    .registerbox  p{
    margin: 0;
    padding: 0;
    font-weight: bold;
    }
    .registerbox input{
    width: 100%;
    margin-bottom: 20px;
    color:#000;
    }
    .registerbox input[type="text"], input[type="password"]
    {
    border: none;
    border-bottom: lpx solid #fff;
    background: transparent;
    outline: none;
    height: 40px;
    }
    .registerbox input[type="submit"]
    {
    border: none;
    outline: none;
    height: 40px;
    background: #fff;
    font-size: 18px;
    border-radius: 20px;
    }
    .registerbox input[type="submit"]:hover
    {
    cursor: pointer;
    background: #000;
    color: #fff;
    }
    .registerbox a{
    text-decoration: none;
    font-size: 12px;
    line-height: 20px;
    color: darkgrey;
    }
    .registerbox a:hover
    {
    color: #ffc107;
    }
.registerbox
  h1   User Registration
  br
  form(action='confirm' method='POST')
    p Account Number
    input#accno(type='text' name='accno' placeholder='Enter Account Number' pattern='[0-9]{9,18}' required='')
    br
    p Customer ID
    input#custid(type='text' name='custid' placeholder='Enter Customer ID' pattern='[0-9]{8}$' required='')
    br
    p Email Address
    input#mail(type='text' name='mail' placeholder='Enter Email Address' pattern='^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$' required='')
    br
    input(type='submit' name='lgn1' value='Submit')
