head
  title Admin
  link(rel='stylesheet' type='text/css' href='style.css')
  style.
    body {
    margin: 0;
    padding: 0;
    background: url(https://images.unsplash.com/photo-1534448177492-6d698f12a59a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);
    background-size: cover;
    background-position: center;
    font-family: sans-serif;
    }
    .registerbox {
    width: 400px;
    height: 500px;
    background: #fff;
    color: #000;
    top: 50%;
    left: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    padding: 70px 70px;
    }
    h1 {
    margin: 0;
    padding: 0 0 20px;
    text-align: center;
    font-size: 22px;
    }
    .registerbox p {
    margin: 0;
    padding: 0;
    font-weight: bold;
    }
    .registerbox input {
    width: 100%;
    margin-bottom: 20px;
    color: #000;
    }
    .registerbox input[type="text"],
    input[type="password"] {
    border: none;
    border-bottom: lpx solid #fff;
    background: transparent;
    outline: none;
    height: 40px;
    }
    .registerbox input[type="submit"] {
    border: none;
    outline: none;
    height: 40px;
    background: #fff;
    font-size: 18px;
    border-radius: 20px;
    }
    .registerbox input[type="submit"]:hover {
    cursor: pointer;
    background: #000;
    color: #fff;
    }
    .registerbox a {
    text-decoration: none;
    font-size: 12px;
    line-height: 20px;
    color: darkgrey;
    }
    .registerbox a:hover {
    color: #ffc107;
    }
.registerbox
  h1  ADMIN
  br 
  form(action='/changestatus' method='POST')
    input(type='submit' name='Block/Unblock' value='Block/Unblock')
  form(action='/request' method='POST')
    input(type='submit' name='Loan Requests' value='Loan Requests')
  form(action='/f_inactive' method='POST')
    input(type='submit' name='Inactive Customers' value='Inactive Customers')
  form(action='/f_active' method='POST')
    input(type='submit' name='Active Customers' value='Active Customers')
  form(action='/transaction' method='POST')
    input(type='submit' name='Transactions' value='Transactions')
  form(action='/logout' method='POST')
    input(type='submit' name='Logout' value='Logout')
    font(color='red') #{message}
